@model Categoria

@{
	ViewData["Title"] = "Borrar Categoría";
}

<h1 class="text-center mb-5 mt-5">Borrar Categoría</h1>

<h3 class="text-center mb-5 mt-5">Está seguro que desea borrar esta categoría?</h3>

<form class="text-center" asp-action="BorrarCategoria">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Borrar</button>
	<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>