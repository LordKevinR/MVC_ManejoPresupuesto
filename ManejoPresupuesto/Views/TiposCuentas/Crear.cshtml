@model TipoCuenta

@{
	ViewData["Title"] = "Cear Tipo Cuenta";
}

<h1 class="text-center mb-5 mt-5">Crear Tipo de Cuenta</h1>
<h5 class="text-center mb-5 mt-5">
	El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
	Ejemplos: Préstamos, Tarjetas de credito, Etc.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
	<div class="mb-3">
		<label asp-for="Nombre" class="form-label"></label>
		<input type="text" asp-for="Nombre" class="form-control"/>
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">
		Enviar
	</button>
	<a class="btn btn-secondary" asp-action="Index">
		Cancelar
	</a>

</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
