<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManejoPresupuesto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManejoPresupuesto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="ManejoPresupuesto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar container fondonav navbar-light border-bottom box-shadow mb-3">
            <div class="container d-sm-flex text-center d-block p-2 justify-content-around">

                <a class="nav-link text-white font-bold navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ManejoPresupuesto</a>

                <a class="nav-link font-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link font-bold text-white" asp-controller="TiposCuentas" asp-action="Index">Tipos Cuentas</a>
                <a class="nav-link font-bold text-white" asp-controller="Cuentas" asp-action="Index">Cuentas</a>
                <a class="nav-link font-bold text-white" asp-controller="Categorias" asp-action="Index">Categorias</a>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ManejoPresupuesto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
